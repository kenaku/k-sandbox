:global(#root)
  font-family: Gotham Pro

.wrap
  width: 100%
  height: 100vh
  display: flex
  background: #333
  background: url('./assets/bg.jpg')
  align-items: center
  overflow-x: hidden
  flex-direction: column

.container
  width: 1200px
  display: flex
  align-items: center
  overflow: visible
  position: relative

.mainText
  max-width: 750px
  color white
  // opacity: 0
  h1
    font-size: 84px
    font-weight: 900
    text-transform: uppercase
    margin: 20px 0
  p
    font-size: 30px
    font-weight: 300
    line-height: 46px

.animationSelector
  position: absolute
  top: 50px
  color white
  opacity: .3
  transition opacity .3s
  &:hover
    opacity: 1

  button
    cursor: pointer
    font-weight: 18px
    color white
    width: 60px
    height: 20px
    background: none
    border: 1px solid white
    border-radius: 3px
    display: inline-block
    margin: 10px 5px
